<div class="card-trip">
  <div class="position-relative">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
    <%= link_to '', item_path(item), class: "itemimage" %>
  </div>
  <div class="card-trip-infos">
    <span class="emogies">
      <%if item.reviews.any? %>
        <% if item.reviews.last.rating == 1 %>
          <i class="fa fa-sad-cry"></i>
        <% elsif item.reviews.last.rating == 2 %>
          <i class="fa fa-frown-open"></i>
        <% elsif item.reviews.last.rating == 3 %>
          <i class="fa fa-laugh-squint"></i>
        <% elsif item.reviews.last.rating == 4 %>
          <i class="fa fa-grin-hearts"></i>
        <% end %>
      <% else %>
        <%= simple_form_for [item, @review] do |f|%>
          <%# <%= f.input :date, as: :hidden, input_html:{ value: item.start_date } %>
          <%= f.input :rating, as: :hidden, input_html:{ value: 1 } %>
          <button class="fa fa-sad-cry"></button>
        <% end %>
        <%= simple_form_for [item, @review] do |f|%>
          <%= f.input :rating, as: :hidden, input_html:{ value: 2 } %>
          <button class="fa fa-frown-open"></button>
        <% end %>
        <%= simple_form_for [item, @review] do |f|%>
          <%= f.input :rating, as: :hidden, input_html:{ value: 3 } %>
          <button class="fa fa-laugh-squint"></button>
        <% end %>
        <%= simple_form_for [item, @review] do |f|%>
          <%= f.input :rating, as: :hidden, input_html:{ value: 4 } %>
          <button class="fa fa-grin-hearts"></button>
        <% end %>
      <% end %>
    </span>
  </div>
</div>
