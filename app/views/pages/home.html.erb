<div class="container mt-3">
  <div class="row dashboard">
    <div class="col-8">
      <div class="summary">
        <div class="container d-flex justify-content-around info-api" style="padding: 16px;">
          <div class="weather" style="height: 200px; width: 200px;">
            <!--Weather API here-->
            <div id="weather-api" style="height: 200px; width: 200px;"></div>
          </div>
          <div class="day-of-week">
            <!--Calendar API here-->
            <p class="date-day">March <%= DateTime.now.day %></p>
          </div>
        </div>
        <div class="container d-flex justify-content-around">
          <%= link_to items_path do %>
            <div class="summary-cal">
              <p class = "title">WEEK</p>
              <i class="fas fa-calendar-alt dashboard-btn"></i>
            </div>
          <%end%>
          <div class="summary-cal">
            <p class = "title">DAY</p>
            <i class="far fa-calendar dashboard-btn" my-16></i>
          </div>
        </div>
      </div>
    </div>
    <div class="col-4">
      <div class="daycontainer">
        <% recents = @items.sort_by {|item| item.updated_at}.reverse %>
        <% recents[0..3].each do |item| %>
          <%= render 'shared/dashboardcard', review: @review, item: item %>
        <% end %>
      </div>
    </div>
  </div>
</div>
