<div class="week">
  <%= week_calendar(number_of_weeks: 1) do |date| %>
    <% if date == Date.today %>
      <div class="todaycontainer">
        <% @items.each do |item|  %>
          <%= link_to item_path(item) do %>
            <% unless @selected == nil %>
              <% if item.title == @selected.title %>
                <%= render 'shared/selectedcard', item: item if item.start_date.to_date == date%>
              <% else %>
                <%= render 'shared/card', item: item if item.start_date.to_date == date%>
              <% end %>
            <% else %>
              <%= render 'shared/card', item: item if item.start_date.to_date == date%>
            <% end %>
          <% end %>
        <% end %>
    </div>
    <% else %>
      <div class="daycontainer">
          <% @items.each do |item|  %>
            <%= link_to item_path(item) do %>
              <% unless @selected == nil %>
                <% if item.title == @selected.title %>
                  <%= render 'shared/selectedcard', item: item if item.start_date.to_date == date%>
                <% else %>
                  <%= render 'shared/card', item: item if item.start_date.to_date == date%>
                <% end %>
              <% else %>
                <%= render 'shared/card', item: item if item.start_date.to_date == date%>
              <% end %>
            <% end %>
          <% end %>
      </div>
    <% end %>
  <% end %>
</div>